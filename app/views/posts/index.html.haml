/ - title "MOMENTS | HOME"
.container.flex.justify-center
  .pt2
    = link_to "+ Add New Moments", new_post_path
.container.flex.flex-wrap.justify-around.content-center.max-w900px
  - @posts.each do |post|
    .wrapper.w45.m1.pt2.tablet-w65.mobile-w100
      .card.h200px.w100
        .image= image_tag post.image.url(:medium), class: "w100"
        .info.flex.flex-column.h100.flex-wrap.w100.justify-between
          = link_to post do
            .info-title.flex.justify-center
              %p.self-center= post.title
          .caption.flex.justify-around
            .sm-font-smaller.self-center= pluralize(post.comments.count, "comment")
            .flex.justify-between.w20.self-center
              .sm-font-smaller
                = post.get_upvotes.size
                = link_to like_post_path(post), method: :get do
                  %i.fa.fa-thumbs-o-up{"aria-hidden" => "true"}
              .sm-font-smaller
                = post.get_downvotes.size
                = link_to dislike_post_path(post), method: :get do
                  %i.fa.fa-thumbs-o-down{"aria-hidden" => "true"}

